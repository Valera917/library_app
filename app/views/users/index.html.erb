<div class="container">
  <div class="row justify-content-center">
    <h4 class="mt-4 display-4">Listing Users</h4>
  </div>
  <%= link_to 'Create User', new_user_path %>
  <div class="row justify-content-center">
    <table class="table table-bordered">
      <thead>
      <tr>
        <th scope="col">Title</th>
        <th scope="col" colspan="3">Action</th>
      </tr>
      </thead>
      <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= link_to 'Show', user_path(user.id) %></td>
          <td><%= button_to 'Edit', edit_user_path(user), method: 'get'%></td>
          <td><%= button_to 'Remove', user_path(user), method: 'delete', data: { confirm: 'Are you sure?' } %></td>
      <% end %>
      </table>
  </div>
  <div class="p-3 mb-2 bg-light text-dark">
    <span class="text-info font-weight-bold">Welcome! </span>
    Add User
  </div>
</div>
