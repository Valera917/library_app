<div class="container">
  <div class="row justify-content-center">
    <h4 class="mt-4 display-4">Listing Books</h4>
  </div>
  <%= link_to 'Create Book', new_book_path %>
  <div class="row justify-content-center">
    <table class="table table-bordered">
      <thead>
      <tr>
        <th scope="col">Title</th>
        <th scope="col" colspan="3">Action</th>
      </tr>
      </thead>
      <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= link_to 'Show', book_path(book.id) %></td>
          <td><%= button_to 'Edit', edit_book_path(book), method: 'get'%></td>
          <td><%= button_to 'Remove', book_path(book), method: 'delete', data: { confirm: 'Are you sure?' } %></td>
      <% end %>
      </table>
  </div>
  <div class="p-3 mb-2 bg-light text-dark">
    <span class="text-info font-weight-bold">Welcome! </span>
    Create Book
  </div>
</div>
