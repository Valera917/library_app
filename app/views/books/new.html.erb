<div class="container">
  <div class="row justify-content-center">
    <h4 class="mt-4 mb-4 display-4">New Book</h4>
  </div>
  <div class="row justify-content-center">
    <%= form_with(model: @book, local: true) do |form| %>
      <div class="form-group">
        <%= form.label :title %>
        <%= form.text_field :title, class: 'form-control' %>
        <%= form.label :author_id %>
        <%= form.text_field :author_id, class: 'form-control' %>
        <%= form.label :biblioteka_id %>
        <%= form.text_field :biblioteka_id, class: 'form-control' %>
        <%= form.label :genre_id %>
        <%= form.text_field :genre_id, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.submit class: 'form-control btn-primary' %>
      </div>
    <% end %>
  </div>
</div>

